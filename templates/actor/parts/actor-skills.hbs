<span class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
        <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' skill'}}' data-type='skill'>
            <i class='fas fa-plus'></i>
            {{localize 'DOCUMENT.New' type='skill'}}
        </a>
    </div>
</span>
<span>
    {{#each skills as |skillAspect id|}}
    {{> skillsByAspect skills=skillAspect aspect=id}}
    {{/each}}
</span>



{{#*inline "skillsByAspect"}}
<span class='item flexrow items-header'>
    {{localize (concat "QIN.aspect." aspect)}}
</span>
<span class="grid grid-3col items-list">
    {{#each skills as |skill id|}}
    <li class='item flexrow' data-item-id='{{skill._id}}'>
        <div class='item-name'>
            <div class='item-image'>
                <a class='rollable' data-roll-type="yy-roll" data-roll-modifier='@aspects.{{../aspect}}.rollableModifier+{{skill.system.value}}[Skill]'
                data-label="{{skill.name}} roll">
                    <img src='{{skill.img}}' title='{{skill.name}}' width='24' height='24' />
                </a>
            </div>
            <h4>{{skill.name}} {{skill.system.value}}</h4>
        </div>
        <div class='item-controls'>
            <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' skill'}}'>
                <i class='fas fa-edit'></i>
            </a>
            <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' skill'}}'>
                <i class='fas fa-trash'></i>
            </a>
        </div>
    </li>
    {{/each}}
</span>

{{/inline}}