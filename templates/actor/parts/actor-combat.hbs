<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='combatFeature'}}'
        data-type='combatFeature'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='combatFeature'}}
      </a>
    </div>
  </li>
  {{#each combatFeatures as |combatFeature id|}}
    <li class='item flexrow' data-item-id='{{combatFeature._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='roll-damage' data-roll="1dY + @aspects.metal.rollableModifier + {{system.skillLevel}}[Skill]" data-damage="{{system.damage}}" data-label="{{combatFeature.name}}">
            <img
              src='{{combatFeature.img}}'
              title='{{combatFeature.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{combatFeature.name}}</h4>
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='combatFeature'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='combatFeature'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>