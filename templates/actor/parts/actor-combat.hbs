<div class="resources grid grid-2col" style="display: flex; flex-flow:row;">

  <span class="resource flex-group-center" style="display: flex;">
    <label>{{localize "QIN.resistance"}}</label>
    <input class="flexshrink" style="flex-basis: 25px;" type="text" name="system.resistance" readonly
      value="{{system.resistance}}" data-dtype="Number" />
  </span>


  <span class="resource flex-group-center" style="display: flex;">
    <label>{{localize "QIN.passiveDefense"}}</label>
    <input class="flexshrink" style="flex-basis: 25px;" type="text" name="system.passiveDefense" readonly
      value="{{system.passiveDefense}}" data-dtype="Number" />
  </span>

</div>


<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' combatFeature'}}'
        data-type='combatFeature'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='combatFeature'}}
      </a>
    </div>
  </li>
  {{#each combatFeatures as |combatFeature id|}}
  <li class='item flexrow' data-item-id='{{combatFeature._id}}'>
    <div class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='yy-roll-damage'
          data-roll-modifier="@aspects.metal.rollableModifier + {{system.skillLevel}}[Skill]"
          data-damage="{{system.damage}}" data-label="{{combatFeature.name}}">
          <img src='{{combatFeature.img}}' title='{{combatFeature.name}}' width='24' height='24' />
        </a>
      </div>
      <div class='item-image'>
        <a class='rollable' data-roll-type='yy-roll'
          data-roll-modifier="@aspects.water.rollableModifier + {{system.skillLevel}}[Skill]"
          data-label="{{combatFeature.name}} defense">
          <img src='icons\skills\melee\shield-block-gray-orange.webp' title='{{combatFeature.name}}' width='24'
            height='24' />
        </a>
      </div>
      <h4>{{combatFeature.name}}</h4>
    </div>
    <div class='item-controls'>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' combatFeature'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' combatFeature'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>